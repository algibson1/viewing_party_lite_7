<div style="text-align: center;">
<% if @user %>
  <a href=<%= logout_path %> class="button">Log Out</a>
<% else %>
  <a href=<%= register_user_path %> class="button">Create New User</a>
  <a href=<%= login_path %> class="button">Log In</a>
<% end %>
</div>
<br> 

<% if @user %>
<h2 style="text-align: center;">
  Other Users:</h2>
<div class="table-container">
  <table class="table">
    <thead>
      <tr class="tr">
        <th class="th1">Name</th>
        <th class="th1">Email</th>
      </tr>
    </thead>
    <tbody>
      <% @user.friends.each do |user| %>
        <tr class="tr">
          <td class="td1"><%= user.name %></td>
          <td class="td1"><%= user.email %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<% end %>
